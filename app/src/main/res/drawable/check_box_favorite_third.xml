<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/favorite_check">

        <shape android:shape="oval">

            <corners android:radius="6dp"/>

            <solid android:color="@color/gray"/>

        </shape>

    </item>

    <item android:state_checked="false" android:drawable="@drawable/background_check">

        <shape android:shape="oval">

            <corners android:radius="6dp"/>

            <solid android:color="@color/gray"/>

        </shape>

    </item>

    <item>

        <shape android:shape="oval">

            <corners android:radius="6dp"/>

            <solid android:color="@color/gray"/>

        </shape>

    </item>
</selector>